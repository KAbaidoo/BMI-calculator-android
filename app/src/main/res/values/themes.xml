<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMIcalculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BMIcalculator.dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/green_color</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
    </style>

    <style name="Theme.BMIcalculator.dark.green" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/green_color</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
    </style>
    <style name="Theme.BMIcalculator.dark.yellow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/yellow_color</item>
        <item name="android:textColorSecondary">@color/grey_text</item>
    </style>

    <style name="Theme.BMIcalculator.dark.blue">
        <item name="android:background">@color/lightBlue_color</item>

    </style>

    <style name="Theme.BMIcalculator.dark.red" >
        <item name="android:background">@color/red_color</item>
    </style>

</resources>